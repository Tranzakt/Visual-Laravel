// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "src/vendor": true, // set this to true to hide the "out" folder with the compiled JS files
    "src/node_modules": true, // set this to true to hide the "out" folder with the compiled JS files
  },
  "search.exclude": {},
  "editor.inlineSuggest.showToolbar": "onHover",
  "editor.laravel.pint.enabled": true,
  "simple-php-cs-fixer.save": true,
  "better-phpunit.phpunitBinary": "src/vendor/phpunit/phpunit/phpunit",
  "editor.formatOnSave": true,
  "cSpell.words": [],
  "terminal.integrated.enableBell": true,
  "terminal.integrated.persistentSessionReviveProcess": "onExitAndWindowClose",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "icon": "terminal-linux"
    },
  },
  "terminal.integrated.useWslProfiles": false,
  "terminal.integrated.tabs.focusMode": "singleClick",
  "terminal.integrated.hideOnStartup": "whenEmpty",
  "terminal.integrated.defaultProfile.linux": "zsh",
}